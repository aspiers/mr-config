# -*- mode: sh -*-

[DEFAULT]

include =
    stow_lib=$HOME/.GIT/3rd-party/mr/lib/stow
    if [ -e "$stow_lib" ]; then
        cat "$stow_lib"
    else
        echo "Couldn't find $stow_lib - stow functions will be absent." >&2
    fi
    #
    for d in ~/.config/mr/lib ~/.config/mr/groups.d; do
        if [ -d "$d" ]; then
            cat "$d"/*
        else
            echo "$d missing" >&2
        fi
    done
