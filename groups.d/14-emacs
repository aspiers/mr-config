    ant
    export RSENSE_HOME=$STOW_DIR/$MR_NAME
    ln -s $MR_REPO $RSENSE_HOME
    chmod +x $RSENSE_HOME/bin/rsense
    ruby $RSENSE_HOME/etc/config.rb > ~/.rsense

