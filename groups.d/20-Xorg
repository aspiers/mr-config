    mr_init_stow_package
fixups =
    mkdir -p build
    cd build
    ../configure --prefix=$HOME
    # FIXME: src/Makefile.am does chown / chmod u+s
    sudo make install prefix=$STOW_PKG_PATH
    mr_restow_regardless

