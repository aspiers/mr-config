# -*- mode: sh -*-

[$HOME/.CVS/stow-web]
checkout = cvs -z3 -d:ext:aspiers@cvs.savannah.gnu.org:/web/stow co -d "$MR_NAME" stow
skip = lazy

[$HOME/.CVS/stow-cvs]
checkout = cvs -z3 -d:ext:aspiers@cvs.savannah.gnu.org:/sources/stow co -d "$MR_NAME" stow
skip = lazy

[$HOME/.GIT/3rd-party/gnulib]
skip = lazy
checkout = git_clone git://git.savannah.gnu.org/gnulib.git
remotes = auto_remotes
fixups =
    ln -sf "$MR_REPO/build-aux/gnupload" ~/bin

[$HOME/.GIT/adamspiers.org/gnu.sec]
skip = default_skipper || not_moosehall
checkout = git_clone_my_repo
remotes = auto_remotes
stowable = true
lib = MR_EMAIL=gnu

[$HOME/.GIT/adamspiers.org/mysqldiff]
skip = lazy
checkout = github_clone
remotes =
    auto_remotes
    git_add_remotes guyfawkes git://github.com/GuyFawkes/mysqldiff.git

[$HOME/.CVS/texinfo]
checkout = cvs -z3 -d:pserver:anonymous@cvs.savannah.gnu.org:/sources/texinfo co texinfo
skip = lazy
fixups =
    ln -sf "$MR_REPO/util/gendocs.sh" ~/bin/gendocs

[$HOME/.GIT/3rd-party/zsh]
skip = lazy
checkout = git_clone git://zsh.git.sf.net/gitroot/zsh/zsh
remotes = auto_remotes
fixups = git_email
lib =
    install_zsh () {
        if ! [ -x configure ]; then
            autoreconf
        fi
        ./configure --prefix=$HOME/local
        make install
    }
install = install_zsh

[$HOME/.GIT/3rd-party/smokeping]
skip = lazy
checkout = github_clone SmokePing
fixups =
    if ! [ -e configure ]; then
        ./autogen.sh
    fi
    ./configure --prefix=$HOME/.STOW/smokeping
    make install

[$HOME/.GIT/3rd-party/screen]
skip = lazy
checkout = savannah_ro_clone screen
fixups =
    cd src
    ./autogen.sh
    ./configure --prefix=$HOME/local
    make
    make install prefix=$HOME/.STOW/screen

[$HOME/.GIT/3rd-party/tmux]
skip = lazy
checkout = svn co https://tmux.svn.sourceforge.net/svnroot/tmux/trunk tmux
stowable = true
lib =
    STOW_PKG_TYPE=directory
    STOW_NO_AUTOMATIC_ACTIONS=yes
fixups =
    if ! [ -e configure ]; then
        bash ./autogen.sh
    fi
    set_stow_common_opts
    ./configure --prefix=$STOW_PKG_PATH
    make install
    mkdir -p $STOW_PKG_PATH/share/doc/tmux
    cp -r examples $STOW_PKG_PATH/share/doc/tmux
    mr_restow_regardless
