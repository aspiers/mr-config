checkout = mr_download_checkout
fixups =
    exe=$HOME/bin/SpotifyController
    cat <<EOF > $exe
    #!/bin/sh

    cd $MR_REPO/server
    java -jar spotifycontrollerservergui.jar &
    EOF
    chmod +x $exe

