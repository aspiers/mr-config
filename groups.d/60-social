# -*- mode: sh -*-

[$HOME/software/web/wpscan]
skip = lazy
checkout = svn checkout http://wpscan.googlecode.com/svn/trunk/ $MR_NAME

[$HOME/software/comms/telegram]
name = telegram
lib = mr_set_download_url
checkout = mr_download_checkout
fixups =
    cd "$MR_REPO"
    ./configure --prefix=$HOME
    make install

