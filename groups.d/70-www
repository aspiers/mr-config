# -*- mode: sh -*-

[$HOME/www/adamspiers.org]
name = www.adamspiers.org
skip = lazy || default_skipper
lib =
    set_email webmaster@adamspiers.org
    set_confidential_repo
checkout = git_clone_my_repo
remotes = auto_remotes

