# -*- mode: sh -*-

# Usage: git_clone URL
git_clone () {
    check_repo_name
    if [ -n "$2" ]; then
        error "$MR_REPO: 2nd arg to git_clone no longer supported"
        exit 1
    fi
    info "Cloning from $1"
    remote_opt=
    if [ -n "$MR_GIT_CLONE_REMOTE" ]; then
        remote_opt="-o $MR_GIT_CLONE_REMOTE"
        info "Default remote is $MR_GIT_CLONE_REMOTE"
    fi
    branch_opt=
    if [ -n "$MR_GIT_CLONE_REMOTE_BRANCH" ]; then
        branch_opt="-b $MR_GIT_CLONE_REMOTE_BRANCH"
        info "Default remote branch is $MR_GIT_CLONE_REMOTE_BRANCH"
    fi
    git clone $remote_opt $branch_opt "$1" "$MR_REPO"
    git_config_email
}

github_clone () {
    github_clone_url=`github_url`
    _github_clone "$@"
}

github_rw_clone () {
    github_clone_url=`github_readwrite_url aspiers`
    _github_clone "$@"
}

_github_clone () {
    MR_GIT_CLONE_REMOTE=github
    MR_GIT_CLONE_REMOTE_BRANCH=master
    if [ $# -gt 0 ]; then
        error "github_clone no longer supports parameters; use MR_GITHUB_NAME."
        exit 1
    fi
    git_clone "$github_clone_url"
}

gitorious_clone () {
    MR_GIT_CLONE_REMOTE=gitorious
    MR_GIT_CLONE_REMOTE_BRANCH=master
    git_clone `gitorious_url`
}

savannah_ro_clone () {
    MR_GIT_CLONE_REMOTE=savannah
    MR_GIT_CLONE_REMOTE_BRANCH=master
    git_clone `savannah_ro_url "$@"`
}

git_clone_my_repo () {
    check_repo_name
    MR_GIT_CLONE_REMOTE=adamspiers.org
    MR_GIT_CLONE_REMOTE_BRANCH=master
    git_clone `my_upstream_url`
}

moosehall_git_checkout () {
    if [ $# -gt 2 ]; then
        error "Usage: moosehall_git_checkout [HUB-HOST [REPO]]"
    fi
    hub="${1:-pacific}"
    repo="${2:-${MR_REPO#$HOME/}}"
    read_localhost_nickname
    if [ "$hub" = "$localhost_nickname" ]; then
        if ! [ -d "$MR_REPO" ]; then
            error "This machine is supposed to be the hub for $MR_REPO but it didn't exist!"
        fi
    else
        MR_GIT_CLONE_REMOTE=$hub
        MR_GIT_CLONE_REMOTE_BRANCH=master
        git_clone $hub:$repo
    fi
}
